# IPv6项目Docker环境变量配置示例
# 复制此文件为 .env 并根据实际情况修改配置

# ===================
# 数据库配置
# ===================
# 重要：根据您的环境调整DB_HOST
# - Linux Docker: 172.25.0.1 (网关IP)
# - Docker Desktop (Windows/Mac): host.docker.internal
# - 本地开发: localhost
# - 自定义网络: 使用网关IP或宿主机IP
DB_HOST=172.25.0.1
DB_USER=linux_db
DB_PASSWORD=root
DB_ROOT_PASSWORD=root
DB_NAME=ipv6_project

# 数据库设置说明：
# 1. 确保宿主机MySQL服务正在运行
# 2. 创建数据库用户并授予权限：
#    CREATE USER 'linux_db'@'172.25.%' IDENTIFIED BY 'root';
#    GRANT ALL PRIVILEGES ON ipv6_project.* TO 'linux_db'@'172.25.%';
#    FLUSH PRIVILEGES;


# ===================
# 应用配置
# ===================
NODE_ENV=production
FRONTEND_PORT=5173
BACKEND_PORT=3000

# ===================
# 安全配置
# ===================
# JWT密钥 - 请生成一个安全的随机字符串
JWT_SECRET=请修改为安全的JWT密钥

# ===================
# 工具配置
# ===================
# XMap容器名称
XMAP_CONTAINER=ipv6-xmap

# 工具路径（容器内路径）
XMAP_PATH=/usr/local/bin/xmap
ZGRAB2_PATH=/usr/local/bin/zgrab2

# 项目根目录（容器内路径）
PROJECT_ROOT=/app

# ===================
# 日志配置
# ===================
LOG_LEVEL=info

# ===================
# 文件上传配置
# ===================
MAX_FILE_SIZE=50mb

# ===================
# 扫描配置
# ===================
# 默认扫描速率（包/秒）
DEFAULT_SCAN_RATE=2000

# 默认最大结果数
DEFAULT_MAX_RESULTS=50000

# ===================
# 网络配置
# ===================
# 是否启用IPv6网络
ENABLE_IPV6=true

# ===================
# 开发配置
# ===================
# 是否启用调试模式
DEBUG=false

# 是否启用API文档
ENABLE_API_DOCS=true

# ===================
# 生产环境配置
# ===================
# 是否启用HTTPS
ENABLE_HTTPS=false

# SSL证书路径（如果启用HTTPS）
SSL_CERT_PATH=./docker/ssl/cert.pem
SSL_KEY_PATH=./docker/ssl/key.pem

# ===================
# 监控配置
# ===================
# 是否启用性能监控
ENABLE_MONITORING=false

# 健康检查间隔（秒）
HEALTH_CHECK_INTERVAL=30
